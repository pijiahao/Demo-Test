
@{
    ViewBag.Title = "QRCode";
    Layout = null;
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script>
    $(function () {
        IsLogin();
    })
    function IsLogin() {
        $.ajax({
            type: "Get",
            url: "/wx/IsLogin",
            dataType: "json",
            success: function (data) {
                if (data.islogin) {
                    window.location.href = "/wx/LoginSuccess";
                }
                else {
                    var s = setTimeout(function () {
                        IsLogin();
                        clearTimeout(s);
                    }, 1000)
                }
            }
        })
    }
</script>
<h1 style="width:100%;text-align:center;">微信公众号登录</h1>
<div style="width:100%;">
    <img src="@ViewBag.QRCodeUrl" width="300" height="300" style="margin:0px auto;display:block;" />
</div>
<p style="width:100%;text-align:center;">扫码>关注>登录</p>
