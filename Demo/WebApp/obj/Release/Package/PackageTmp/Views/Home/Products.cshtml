
@{
    ViewBag.Title = "产品信息";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Content/appjs/Product/product.js"></script>
<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-body panel_body">
            <table data-toggle="table" id="producttable" class="table table-hover" data-page-size="10"
                   data-query-params-type=""
                   data-query-params=customquery
                   data-side-pagination="server"
                   data-url="/api/Product/QueryProductByPage"
                   data-pagination="true">
                <thead>
                    <tr>
                        <th data-field="Name">产品名称</th>
                        <th data-field="DisplayName">对外名称</th>
                        <th data-field="ProductKey">产品key</th>
                        <th data-field="CreationDate" data-formatter="operateDateFormatter">创建时间</th>
                        <th data-field="CreationUserName">创建人</th>
                        <th data-field="Remark">备注</th>
                        <th data-field="" data-width="150" data-formatter="operateFormatter" data-events="operateEvents">操作</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
    <!-- /.panel-body -->
</div>

<div class="modal fade in" id="ProductModal" tabindex="-1" role="dialog" aria-hidden="false">
    <div class="modal-dialog">
        <div class="modal-wrapper">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                    <h4 class="modal-title">产品信息</h4>
                </div>
                <form id="ProductsForm" class="form-horizontal" enctype="multipart/form-data">
                    <div class="modal-body">
                        <input type="hidden" id="productid" value="0" />
                        <div class="form-group">
                            <label class="col-sm-2 control-label form-label">产品名称</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" name="Name" placeholder="请输入产品名称（必填）" id="Name" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label form-label">产品对外名称</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" name="DisplayName" placeholder="请输入产品对外名称（必填）" id="DisplayName" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label form-label">产品Key</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" disabled="disabled" name="ProductKey" id="ProductKey" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label form-label">备注</label>
                            <div class="col-sm-10">
                                <textarea class="form-control" placeholder="请输入备注（选填）" maxlength="500" name="Remark" id="Remark" ></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default productSave">保存</button>
                        <button type="button" class="btn btn-white" data-dismiss="modal">关闭</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

